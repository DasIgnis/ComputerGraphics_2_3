<UserControl x:Class="ComputerGraphics_2_3.HistogramWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerGraphics_2_3"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="histogram">
        <oxy:Plot Title="{Binding title}" Height="450" VerticalAlignment="Bottom">
            <oxy:Plot.Series>
                <oxy:ColumnSeries x:Name="series"/>
            </oxy:Plot.Series>
        </oxy:Plot>
    </Grid>
</UserControl>
